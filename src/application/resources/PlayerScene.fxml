<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" stylesheets="@styling.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.playerController">
   <children>
      <Text fx:id="_videoTitle" layoutY="100.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Now Playing: " textAlignment="CENTER" wrappingWidth="1024.0">
         <font>
            <Font size="48.0" />
         </font></Text>
      <Button fx:id="_returnButton" layoutX="25.0" layoutY="700.0" mnemonicParsing="false" onAction="#handleReturnButton" prefHeight="50.0" prefWidth="125.0" styleClass="bigButton" text="Return" />
      <Button layoutX="512.0" layoutY="590.0" mnemonicParsing="false" onAction="#handlePausePlayButton" prefHeight="50.0" prefWidth="150.0" styleClass="smallButton" text="Pause/Play" />
      <Button layoutX="712.0" layoutY="590.0" mnemonicParsing="false" onAction="#handleForwardButton" prefHeight="50.0" prefWidth="75.0" styleClass="smallButton" text="&gt;&gt;" />
      <Button layoutX="387.0" layoutY="590.0" mnemonicParsing="false" onAction="#handleBackwardsButton" prefHeight="50.0" prefWidth="75.0" styleClass="smallButton" text="&lt;&lt;" />
      <Button layoutX="237.0" layoutY="590.0" mnemonicParsing="false" onAction="#handleMuteButton" prefHeight="50.0" prefWidth="100.0" styleClass="smallButton" text="Mute" />
      <BorderPane fx:id="_player" layoutX="212.0" layoutY="165.0" prefHeight="400.0" prefWidth="600.0">
         <center>
            <MediaView fx:id="_mediaView" fitHeight="400.0" fitWidth="600.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
      <CheckBox fx:id="backgroundMusicCheckBox" layoutX="35.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleBackgroundMusic" prefHeight="25.0" text="Play Background Music" />
   </children>
</AnchorPane>
